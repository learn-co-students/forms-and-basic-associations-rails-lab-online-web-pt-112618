<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <!-- :id option value -> params -->
  <!--  name interporate (rendered text) -->
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <%= f.label :notes_1 %>
  <%= f.text_field :note_contents, id: :song_notes_1, multiple: true %>
  <br />

  <%= f.label :notes_2 %>
  <%= f.text_field :note_contents, id: :song_notes_2, multiple: true %>
  <br />

  <%= f.submit %>
<% end %>
